<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".ecommerce.home">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:weightSum="5"
        android:padding="@dimen/five"
        android:orientation="horizontal"
        android:background="@drawable/white_gredient_bg"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="35sp"
            android:padding="@dimen/five"
            android:layout_weight="0"
            android:layout_margin="@dimen/five"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_height="35dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/forget_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Order"
            app:fontFamily="@font/montserrat_b"
            android:gravity="center|start"
            android:layout_weight="5"
            android:layout_gravity="center|start"
            android:padding="@dimen/five"
            android:textSize="@dimen/tittle_text_size"

            android:textColor="@color/black"
            android:alpha="0.7"

            app:layout_constraintTop_toBottomOf="@id/frameId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>