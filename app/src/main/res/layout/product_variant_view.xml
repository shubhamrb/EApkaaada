<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ecommerce.home">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="70sp"
            android:layout_height="wrap_content">


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:tabBackground="@drawable/indicator_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"

                app:layout_constraintTop_toBottomOf="@id/viewPager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

             <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. "
                android:fontFamily="@font/montserrat"
                android:padding="@dimen/Margin5dp"
                android:textSize="@dimen/Margin10dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/Margin10dp"
                android:layout_marginEnd="@dimen/Margin10dp"
                android:layout_marginStart="@dimen/Margin10dp"
                android:background="@drawable/red_gredient_rect_bg"
                android:padding="@dimen/Margin5dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:layout_marginStart="@dimen/Margin10dp"

                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:text="Qnty : 2 "

                        android:layout_gravity="start|center"
                        android:gravity="start|center"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="normal"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:lineSpacingExtra="9.5sp"

                        android:layout_marginEnd="@dimen/Margin10dp"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="2sp"
                        android:background="@color/white"
                        android:layout_gravity="center"

                        android:layout_height="20sp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:text="₹ 1,100"

                        android:layout_gravity="start"
                        android:gravity="start"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/Margin10dp"
                        android:lineSpacingExtra="9.5sp"
                        tools:text="₹ 1,100"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center|end"
                    android:gravity="center|end"

                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/addCart"
                        android:elevation="5dp"
                        android:layout_margin="@dimen/Margin5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to card"
                        android:padding="@dimen/Margin10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"

                        android:textAllCaps="false"
                        android:background="@drawable/white_gredient_bg_rect"
                        android:textColor="@color/colorPrimary"

                        android:textSize="@dimen/text_size_edit"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>




        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>


<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_gravity="end|bottom"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:background="@drawable/green_rect"
        android:padding="@dimen/Margin10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_gravity="center|start"
    android:gravity="center|start"

    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:text="1"

        android:layout_gravity="start|center"
        android:gravity="start|center"
        android:fontFamily="@font/montserrat"
        android:textStyle="normal"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:lineSpacingExtra="9.5sp"
        tools:text="₹ 1,100"
        android:layout_marginEnd="@dimen/Margin10dp"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="2sp"
        android:background="@color/white"
        android:layout_gravity="center"

        android:layout_height="20sp"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:text="₹ 1,100"

        android:layout_gravity="start"
        android:gravity="start"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/white"
 android:layout_marginStart="@dimen/Margin10dp"
        android:lineSpacingExtra="9.5sp"
        tools:text="₹ 1,100"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center|end"
            android:gravity="center|end"

            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/saveData"
                android:elevation="5dp"
                android:layout_margin="@dimen/Margin5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed to checkout"
                android:padding="@dimen/Margin10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/montserrat"

                android:textAllCaps="false"
                android:background="@drawable/white_gredient_bg_rect"
                android:textColor="@color/green"

                android:textSize="@dimen/text_size_edit"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.coordinatorlayout.widget.CoordinatorLayout>