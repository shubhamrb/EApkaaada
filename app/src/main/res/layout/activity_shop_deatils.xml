<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:gravity="center"
        android:layout_gravity="center">
      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="wrap_content">
          <com.google.android.material.appbar.AppBarLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/appBar"

              android:background="@drawable/white_gredient_bg"
              app:titleTextColor="@color/white"



              app:elevation="0dp">

              <androidx.appcompat.widget.Toolbar
                  android:id="@+id/toolbar"

                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/white_gredient_bg"
                  app:contentInsetStart="0dp"
                  app:titleTextColor="@color/black"
                  app:contentInsetStartWithNavigation="0dp"
                  app:elevation="0dp"
                  >



              </androidx.appcompat.widget.Toolbar>

          </com.google.android.material.appbar.AppBarLayout>
          <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:weightSum="5"
              android:id="@+id/headerLayout"
             android:layout_marginStart="@dimen/Margin5dp"
              android:layout_marginEnd="@dimen/Margin5dp"
              android:layout_height="wrap_content">
              <androidx.appcompat.widget.LinearLayoutCompat
                  android:layout_width="match_parent"
                  android:layout_weight="0.5"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_height="wrap_content">
                  <com.google.android.material.textfield.TextInputEditText
                      android:id="@+id/edit_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center|left"
                      android:inputType="text"



                      android:textSize="12sp"
                      android:background="@drawable/form_edit_text_background"
                      android:hint="Search E.g Shop,Category,Service,Product"

                      android:fontFamily="@font/montserrat"
                      android:drawablePadding="@dimen/Margin5dp"
                      android:drawableEnd="@drawable/setting"
                      android:drawableTint="@color/grayColor"
                      android:textColorHint="@color/grayColor"
                      android:drawableStart="@drawable/ic_search_black_24dp"

                      android:padding="@dimen/Margin10dp"

                      />

              </androidx.appcompat.widget.LinearLayoutCompat>

              <androidx.appcompat.widget.LinearLayoutCompat
                  android:layout_width="match_parent"
                  android:layout_weight="4.5"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_height="wrap_content">
                  <androidx.appcompat.widget.AppCompatImageView
                      android:id="@+id/likeDislike"
                      android:layout_width="30sp"

                      android:background="@drawable/heart"
                      android:backgroundTint="@color/colorPrimary"
                      android:layout_gravity="center"

                      android:layout_height="30sp"/>
                  <com.airbnb.lottie.LottieAnimationView
                      android:id="@+id/hearAnimation"
                      android:layout_width="15sp"
                      android:layout_height="15sp"
                      android:visibility="gone"

                      android:layout_gravity="center"
                      android:gravity="center"
                      app:lottie_rawRes="@raw/heartlike"
                      app:lottie_autoPlay="true"
                      app:lottie_loop="true"/>

              </androidx.appcompat.widget.LinearLayoutCompat>

          </androidx.appcompat.widget.LinearLayoutCompat>


          <View
              android:layout_marginTop="@dimen/Margin10dp"
              android:alpha=".7"
              android:layout_width="match_parent"
              android:background="@color/grayColor"
              android:layout_height="2sp"/>
          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/listCat"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:scrollbars="none"
              tools:listitem="@layout/item_category"
              android:orientation="horizontal"
              app:reverseLayout="true"

              app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

              android:divider="@null"
              />
          <View
              android:layout_width="match_parent"
              android:background="@color/grayColor"
              android:alpha=".7"
              android:layout_height="2sp"/>
          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/listSubCat"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:scrollbars="none"
              tools:listitem="@layout/item_sub_category"
              android:orientation="horizontal"
              app:reverseLayout="true"

              app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

              android:divider="@null"
              />
          <View
              android:layout_width="match_parent"
              android:background="@color/grayColor"
              android:alpha=".7"
              android:layout_height="2sp"/>
      </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:layout_gravity="center">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"

            android:id="@+id/btnProcess"
            android:orientation="vertical"
            android:layout_gravity="end|bottom"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:background="@drawable/green_rect"
                android:padding="@dimen/Margin10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"

                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="40sp"
                        android:layout_height="40sp"

android:layout_gravity="center"
                        android:gravity="center"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/chk_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:scaleType="fitXY"

                            android:src="@drawable/ic_shopping_cart" />

                        <com.google.android.material.textview.MaterialTextView

                            android:id="@+id/itemCount"
                            android:layout_width="20sp"
                            android:layout_height="20sp"

                            android:layout_gravity="center"
                            android:background="@drawable/red_circle"
                            android:gravity="center"
                            android:text="0"

                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <View
                        android:layout_width="2sp"
                        android:background="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/Margin10dp"

                        android:layout_height="20sp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:id="@+id/tvPrice"
                        android:layout_gravity="start|center"
                        android:gravity="start|center"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/Margin10dp"
                        android:lineSpacingExtra="9.5sp"
                        tools:text="₹ 1,100"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center|end"
                    android:gravity="center|end"

                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/btnProceed"
                        android:elevation="5dp"
                        android:layout_margin="@dimen/Margin5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Proceed to checkout"
                        android:padding="@dimen/Margin10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"

                        android:textAllCaps="false"
                        android:background="@drawable/white_gredient_bg_rect"
                        android:textColor="@color/green"

                        android:textSize="@dimen/text_size_edit"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_cpy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo"
                android:layout_below="@+id/chk_icon"
                android:scaleType="fitXY"
                android:visibility="gone"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView

        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/myLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fillViewport="true">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"


                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layoutNoProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_b"
                        android:gravity="center"
                        android:text="No Product Found"
                        android:textSize="@dimen/Margin20dp" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layView"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:background="@color/white"

                    android:orientation="vertical">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="@dimen/Margin10dp"

                        android:background="@color/white"

                        />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        app:tabBackground="@drawable/indicator_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"

                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/shopName"
                        android:fontFamily="@font/montserrat_b"
                        android:padding="@dimen/Margin5dp"
                        android:text=""

                        android:textSize="@dimen/text_size_edit" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
android:id="@+id/shopDes"
                        android:fontFamily="@font/montserrat"
                        android:padding="@dimen/Margin5dp"
                        android:text=""
                        android:alpha="0.7"
                        android:textSize="@dimen/text_size_edit" />



                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/Margin10dp"
                        android:layout_marginTop="@dimen/Margin10dp"
                        android:layout_marginEnd="@dimen/Margin10dp"
                        android:background="@drawable/red_gredient_rect_bg"
                        android:orientation="horizontal"
                        android:padding="@dimen/Margin5dp"
                        android:weightSum="3">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="@dimen/Margin10dp"
                            android:layout_weight="1"

                            android:gravity="center|start"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:id="@+id/rating"

                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginEnd="@dimen/Margin10dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="start|center"
                                android:lineSpacingExtra="9.5sp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_edit"
                                android:textStyle="normal"
                                tools:text="Rating : 5/5" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/Margin5dp"
                                android:layout_weight="1.4"
                                android:gravity="center|start"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="16sp"
                                    android:id="@+id/tvStartOne"
                                    android:layout_height="16sp"
                                    android:background="@drawable/ic_star_black_24dp"
                                    android:backgroundTint="@color/yellow" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="16sp"
                                    android:id="@+id/tvStartTwo"
                                    android:layout_height="16sp"
                                    android:background="@drawable/ic_star_black_24dp"
                                    android:backgroundTint="@color/yellow" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="16sp"
                                    android:id="@+id/tvStartThree"
                                    android:layout_height="16sp"
                                    android:background="@drawable/ic_star_black_24dp"
                                    android:backgroundTint="@color/yellow" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="16sp"
                                    android:id="@+id/tvStartFour"
                                    android:layout_height="16sp"
                                    android:background="@drawable/ic_star_black_24dp"
                                    android:backgroundTint="@color/yellow" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="16sp"
                                    android:id="@+id/tvStartFive"
                                    android:layout_height="16sp"
                                    android:background="@drawable/ic_star_black_24dp"
                                    android:backgroundTint="@color/yellow" />


                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:layout_weight="2"

                            android:gravity="center|end">

                            <com.google.android.material.textview.MaterialTextView

                                android:layout_width="match_parent"
                                android:id="@+id/rateCount"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end"
                                android:layout_margin="@dimen/Margin5dp"
                                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                                android:drawableTint="@color/white"
                                android:elevation="5dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center|end"
                                android:padding="@dimen/Margin5dp"
                                android:text="89 Review"

                                android:textAllCaps="false"
                                android:textColor="@color/white"

                                android:textSize="12sp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listProduct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/Margin10dp"
                        android:divider="@null"
                        android:orientation="vertical"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

                        app:reverseLayout="true"

                        tools:listitem="@layout/item_product" />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:id="@+id/ShoplayoutSad"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_margin="@dimen/Margin10dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/sadImg"
                            android:layout_width="50sp"
                            android:layout_gravity="center"
                            android:gravity="center"

                            android:background="@drawable/sad"
                            android:layout_height="50sp"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:text="Opps No Product Found"
                            android:textSize="24dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/Margin5dp"
                            app:fontFamily="@font/montserrat_b"
                            android:layout_height="wrap_content"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="100sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>