<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".fragments.VehicleMasterEdit">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/Margin10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tittleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="@dimen/Margin10dp"
                    android:text="Tittle Name"
                    android:textSize="@dimen/textsize18sp"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tvClose"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:backgroundTint="@color/black"
            android:layout_gravity="end"
            android:background="@drawable/ic_close_black_24dp" />

        <EditText

            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_stroke_gray"
            android:drawableRight="@drawable/ic_search_black_24dp"

            android:hint="Search "
            android:inputType="text"
            android:padding="10sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"


            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/attendanceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="@dimen/Margin50dp"
                android:layout_height="@dimen/Margin50dp"
                android:layout_gravity="center"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/Margin10dp"
                android:text="Fetching the data.."
                android:textColor="@color/black"
                android:textSize="@dimen/Margin15dp" />
        </LinearLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/addressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"

            android:visibility="gone"
            android:weightSum="2">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/Margin10dp"
                    android:background="@drawable/red_frame"
                    android:gravity="end"
                    android:padding="@dimen/Margin5dp"
                    android:text="Add New Address"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_edit" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end">

                <ImageView
                    android:id="@+id/closeImg"
                    android:layout_width="25sp"
                    android:layout_height="25sp"

                    android:layout_gravity="end"
                    android:background="@drawable/ic_close_black_24dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>






</androidx.coordinatorlayout.widget.CoordinatorLayout>