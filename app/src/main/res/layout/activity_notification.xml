<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    android:layout_gravity="top"
    android:gravity="top"
    android:layout_height="match_parent"
    tools:context=".ui.auth.Offer.ViewOffer">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar"
        app:titleTextColor="@color/white"
        android:padding="@dimen/Margin5dp"
        android:background="@color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_gredient_bg"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:elevation="0dp"
            app:titleTextColor="@color/black">


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:weightSum="2"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/Margin5dp"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
android:id="@+id/order_noti_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Notification"
            android:layout_marginRight="@dimen/ten"

            android:textAllCaps="false"
             android:textColor="@color/white"

            android:textSize="@dimen/text_size_edit"
            app:layout_constraintTop_toTopOf="@id/edit_password"
            app:layout_constraintBottom_toBottomOf="@id/edit_password"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/ten" />


    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/Margin5dp"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/daily_noti_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Notification"
            android:layout_marginRight="@dimen/ten"

            android:textAllCaps="false"

            android:textColor="@color/white"

            android:textSize="@dimen/text_size_edit"
            app:layout_constraintTop_toTopOf="@id/edit_password"
            app:layout_constraintBottom_toBottomOf="@id/edit_password"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/ten" />


    </LinearLayout>
</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/OfferlistItem"
        android:layout_gravity="center"
        android:gravity="center"
        tools:listitem="@layout/cat_item_shop"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>