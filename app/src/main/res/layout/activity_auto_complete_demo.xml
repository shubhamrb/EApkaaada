<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_gredient_bg"
        app:titleTextColor="@color/white"



        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/white_gredient_bg"
            app:contentInsetStart="0dp"
            app:titleTextColor="@color/black"

            app:contentInsetStartWithNavigation="0dp"
            app:elevation="0dp"
            >
        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
android:layout_margin="@dimen/Margin10dp"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pinMap"
            android:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detect My Current Location"
            android:padding="@dimen/Margin15dp"
            android:layout_gravity="center|start"
            android:gravity="center|start"
         android:drawablePadding="@dimen/Margin15dp"
            android:drawableTint="@color/black"
            android:drawableStart="@drawable/ic_my_location_black_24dp"


            android:fontFamily="@font/montserrat_b"
            android:textAllCaps="false"

            android:textColor="@color/black"
            android:textSize="@dimen/text_size_edit"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1sp"/>
        <AutoCompleteTextView
            android:id="@+id/edtStartPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/ic_baseline_map_24"
           android:drawablePadding="@dimen/Margin10dp"
            android:layout_marginTop="@dimen/Margin15dp"
            android:layout_toRightOf="@+id/linerLocationicon"
            android:background="@drawable/form_edit_text_background"
            android:hint="Enter Your Location"
            android:maxLength="60"
            android:singleLine="true"
            android:padding="15dp"
            android:textColor="#777"
            android:textSize="13dp" />



        <com.google.android.material.textview.MaterialTextView

            android:elevation="5dp"

android:layout_marginTop="@dimen/margin25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save My Location"
            android:padding="@dimen/Margin15dp"
            android:layout_gravity="center"
            android:gravity="center"
android:id="@+id/savebtn"
            android:fontFamily="@font/montserrat_b"
            android:textAllCaps="false"
            android:background="@drawable/green_gredient_rect_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_edit"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Or"
            android:layout_marginTop="@dimen/Margin15dp"
            android:textSize="@dimen/margin25dp"
            android:fontFamily="@font/montserrat_b"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_marginRight="5dp"
               >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linerLocationicon"
                        android:layout_width="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgGps"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:padding="2dp"
                            android:src="@drawable/amu_bubble_mask"
                            />

                        <ImageView
                            android:id="@+id/imgoverflow"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:padding="5dp"
                           />

                        <ImageView
                            android:id="@+id/location"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:padding="2dp"
                            />
                    </LinearLayout>



                    <AutoCompleteTextView
                        android:id="@+id/edtEndPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/linerLocationicon"
                        android:background="@drawable/form_edit_text_background"
                        android:hint="End Point"
                        android:maxLength="60"
                        android:singleLine="true"
                        android:padding="10dp"
                        android:textColor="#777"
                        android:textSize="13dp" />








                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>