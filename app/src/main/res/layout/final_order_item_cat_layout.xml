<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:id="@+id/layoutView"
    android:layout_marginBottom="70sp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar"

        android:background="@drawable/white_gredient_bg"
        app:titleTextColor="@color/white"
        android:padding="@dimen/Margin5dp"


        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_gredient_bg"
            app:contentInsetStart="0dp"
            app:titleTextColor="@color/black"
            app:contentInsetStartWithNavigation="0dp"
            app:elevation="0dp"
            >



        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"

        android:text="Your Order Address"
        android:textSize="@dimen/Margin10dp"
        android:layout_marginStart="@dimen/Margin15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
android:id="@+id/locationTv"
        android:text=""
        android:textSize="@dimen/Margin10dp"
        android:layout_marginStart="@dimen/Margin15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_marginBottom="@dimen/Margin5dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_gravity="center|start"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35sp"
                android:backgroundTint="@color/grayColor"
                android:layout_gravity="center|start"
                app:tint="@color/black"

                android:background="@drawable/ic_baseline_add_location_alt_24"
                android:layout_height="35sp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center|start"

            android:orientation="vertical"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:padding="2sp"
                android:id="@+id/tvAddress"
                android:text=""
                android:layout_height="wrap_content"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvAddType"
                android:layout_width="wrap_content"
android:background="@drawable/red_gredient_bg"
                android:padding="2sp"
                 android:textColor="@color/white"

                android:layout_height="wrap_content"/>


        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:weightSum="2"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:text="Add New Address"
                android:id="@+id/tvChange"

                android:background="@drawable/red_frame"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="start"
                android:gravity="start"
                android:textSize="@dimen/text_size_edit"
                android:padding="@dimen/Margin5dp"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:text="Choose Address"
                android:id="@+id/tvChoose"
                android:layout_marginEnd="@dimen/Margin10dp"
                android:background="@drawable/red_frame"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="@dimen/text_size_edit"
                android:padding="@dimen/Margin5dp"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"

        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"

            android:padding="@dimen/Margin5dp"
            android:background="@color/white"

            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Have a Cupon Code ?"
                app:fontFamily="@font/montserrat"
                android:gravity="center|start"

                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:layout_marginTop="@dimen/tittle_text_size"

                android:textSize="@dimen/tittle_text_size"

                android:textColor="@color/black"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/edit_coupon_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="text"

                android:textSize="@dimen/text_size_edit"

                android:layout_marginTop="@dimen/tittle_text_size"


                android:background="@drawable/form_edit_text_background"
                android:hint="Endter Coupon "
                android:padding="16dp"

                app:layout_constraintTop_toBottomOf="@id/login"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SpUsage"
                android:layout_marginEnd="110dp"
                android:layout_marginStart="@dimen/ten" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:layout_marginRight="@dimen/ten"

                android:textAllCaps="false"
                android:background="@drawable/btn_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_edit"
                app:layout_constraintTop_toTopOf="@id/edit_coupon_code"
                app:layout_constraintBottom_toBottomOf="@id/edit_coupon_code"
                app:layout_constraintEnd_toEndOf="parent"/>


            <com.google.android.material.textview.MaterialTextView

                android:layout_width="match_parent"
                android:id="@+id/tvCardSummary"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="Card Summary"

                android:padding="@dimen/Margin5dp"
                android:layout_marginStart="@dimen/Margin5dp"
                android:textColor="@color/green"
                android:fontFamily="@font/montserrat_b"

                android:textSize="@dimen/Margin15dp"


                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_coupon_code"

                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listProductOrder"
                android:layout_marginTop="@dimen/Margin10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"

                tools:listitem="@layout/item_final_oder"
                android:orientation="vertical"
                app:reverseLayout="true"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCardSummary"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:divider="@null"
                />
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/listProductOrder"
                android:layout_height="1sp"/>
            <com.google.android.material.textview.MaterialTextView

                android:layout_width="match_parent"
                android:id="@+id/tvSubTotal"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="Sub Total"

                android:padding="@dimen/Margin5dp"
                android:layout_marginStart="@dimen/Margin5dp"
                android:textColor="@color/green"
                android:fontFamily="@font/montserrat_b"

                android:textSize="@dimen/Margin15dp"


                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1"

                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:id="@+id/tvCoupon"
                android:gravity="center"                app:layout_constraintTop_toBottomOf="@+id/tvSubTotal"
                android:weightSum="5"


                android:layout_height="wrap_content">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:gravity="center|left"
    android:layout_gravity="center|left"
    android:layout_height="wrap_content">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:id="@+id/allOrderItem"
        android:text="Coupon Applied"


        android:fontFamily="@font/montserrat"
        android:textSize="@dimen/text_size_edit"
        android:layout_marginStart="@dimen/Margin10dp"

        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:text="Apply"
        android:id="@+id/tvApplyCoupon"
        android:layout_marginStart="@dimen/Margin5dp"
        android:background="@drawable/red_frame"
        android:textColor="@color/colorPrimaryDark"
        android:drawableTint="@color/colorPrimaryDark"
        android:drawableEnd="@drawable/ic_close_black_24dp"
        android:layout_gravity="center"
        android:gravity="center"
android:padding="@dimen/Margin5dp"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:id="@+id/tvCouponPrice"
                    android:text=""

                    android:layout_gravity="center|right"
                    android:gravity="center|right"
                    android:layout_marginEnd="@dimen/Margin10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_edit"

                    android:layout_weight="4"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/Margin5dp"
                android:id="@+id/deliverCharge"
                app:layout_constraintTop_toBottomOf="@+id/tvCoupon"
                android:weightSum="5"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"

                    android:text="Deliver Charge"


                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/text_size_edit"
                    android:layout_marginStart="@dimen/Margin10dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"

                    android:text=""
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginEnd="@dimen/Margin10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_edit"

                    android:layout_weight="4"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/Margin10dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/deliverCharge"
                android:layout_height="1sp"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/Margin5dp"
                android:id="@+id/totalPrice"
                app:layout_constraintTop_toBottomOf="@+id/line2"
                android:weightSum="5"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"

                    android:text="Total "


                    android:fontFamily="@font/montserrat"
                    android:textSize="@dimen/Margin15dp"
                    android:layout_marginStart="@dimen/Margin10dp"
                    android:layout_weight="1"
                    app:fontFamily="@font/montserrat_b"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView

                    android:layout_width="match_parent"

                    android:text=" "
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginEnd="@dimen/Margin10dp"
                    android:textColor="@color/green"
                    android:textSize="@dimen/Margin15dp"
                    android:id="@+id/tvTotalPrice"

                    android:layout_weight="4"
                    app:fontFamily="@font/montserrat_b"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_rect"
        android:orientation="horizontal"
        android:id="@+id/layoutProceed"

        android:weightSum="2"

  android:layout_gravity="bottom|end"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:background="@drawable/green_rect"
            android:padding="@dimen/Margin10dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center|start"
                android:gravity="center|start"

                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="40sp"
                    android:layout_height="40sp"

                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/chk_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"

                        android:src="@drawable/ic_shopping_cart" />

                    <com.google.android.material.textview.MaterialTextView

                        android:id="@+id/itemCount"
                        android:layout_width="20sp"
                        android:layout_height="20sp"

                        android:layout_gravity="center"
                        android:background="@drawable/red_circle"
                        android:gravity="center"
                        android:text="0"

                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <View
                    android:layout_width="2sp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/Margin10dp"

                    android:layout_height="20sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:id="@+id/tvPrice"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/Margin10dp"
                    android:lineSpacingExtra="9.5sp"
                    tools:text="₹ 1,100"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center|end"
                android:gravity="center|end"

                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/btnProceed"
                    android:elevation="5dp"
                    android:layout_margin="@dimen/Margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proceed to checkout"
                    android:padding="@dimen/Margin10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"

                    android:textAllCaps="false"
                    android:background="@drawable/white_gredient_bg_rect"
                    android:textColor="@color/green"

                    android:textSize="@dimen/text_size_edit"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_cpy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo"
            android:layout_below="@+id/chk_icon"
            android:scaleType="fitXY"
            android:visibility="gone"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
