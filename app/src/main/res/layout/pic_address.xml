<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".ecommerce.home">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:weightSum="5"
        android:padding="@dimen/five"
        android:orientation="horizontal"
        android:background="@drawable/white_gredient_bg"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="35sp"
            android:padding="@dimen/five"
            android:layout_weight="0"
            android:layout_margin="@dimen/five"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_height="35dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/forget_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Account"
            app:fontFamily="@font/montserrat_b"
            android:gravity="center|start"
            android:layout_weight="5"
            android:layout_gravity="center|start"
            android:padding="@dimen/five"
            android:textSize="@dimen/tittle_text_size"

            android:textColor="@color/black"
            android:alpha="0.7"

            app:layout_constraintTop_toBottomOf="@id/frameId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/Margin5dp"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"

        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="Contact Details"
            android:fontFamily="@font/poppins_bold"

            android:layout_height="wrap_content"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="Kindly input contact person and address as mentioned"
            android:fontFamily="@font/poppins"
            android:textSize="11dp"


            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Margin5dp"
            android:inputType="text"
            android:textSize="@dimen/text_size_edit"
            android:background="@drawable/white_gredient_bg_rect"
            android:hint="Full Name"
            android:padding="16dp"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Margin10dp"
            android:inputType="text"
            android:textSize="@dimen/text_size_edit"
            android:background="@drawable/white_gredient_bg_rect"
            android:hint="Mobile No."
            android:padding="16dp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Margin10dp"
            android:inputType="text"
            android:textSize="@dimen/text_size_edit"
            android:background="@drawable/white_gredient_bg_rect"
            android:hint="Email id."
            android:padding="16dp"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_email_house"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Margin10dp"
            android:inputType="text"
            android:textSize="@dimen/text_size_edit"
            android:background="@drawable/white_gredient_bg_rect"
            android:hint="House No./Flate No./Building No"
            android:padding="16dp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_email_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Margin10dp"
            android:inputType="text"
            android:textSize="@dimen/text_size_edit"
            android:background="@drawable/white_gredient_bg_rect"
            android:hint="Street Name / Local Name / Locality"
            android:padding="16dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:weightSum="2"
    android:padding="@dimen/Margin10dp"
    android:layout_marginEnd="@dimen/Margin5dp"
    android:layout_marginStart="@dimen/Margin5dp"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/myCurrentLocation"
            android:elevation="5dp"
            android:layout_margin="@dimen/Margin5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detect My Location"
            android:padding="@dimen/Margin10dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:fontFamily="@font/montserrat_b"
            android:textAllCaps="false"
            android:background="@drawable/red_gredient_rect_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_edit"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pinMap"
            android:elevation="5dp"
            android:layout_margin="@dimen/Margin5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pin On Map"
            android:padding="@dimen/Margin10dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:fontFamily="@font/montserrat_b"
            android:textAllCaps="false"
            android:background="@drawable/green_gredient_rect_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_edit"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>