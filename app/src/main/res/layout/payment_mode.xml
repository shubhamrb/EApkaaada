<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".ecommerce.home">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:weightSum="5"
            android:padding="@dimen/five"
            android:orientation="horizontal"
            android:background="@drawable/white_gredient_bg"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35sp"
                android:padding="@dimen/five"
                android:layout_weight="0"
                android:id="@+id/tvBack"
                android:layout_margin="@dimen/five"
                android:backgroundTint="@color/black"
                android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:layout_height="35dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/forget_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Mode"
                app:fontFamily="@font/montserrat_b"
                android:gravity="center|start"
                android:layout_weight="5"
                android:layout_gravity="center|start"
                android:padding="@dimen/five"
                android:textSize="@dimen/tittle_text_size"

                android:textColor="@color/black"
                android:alpha="0.7"

                app:layout_constraintTop_toBottomOf="@id/frameId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/Margin5dp"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="5"
                android:id="@+id/tvCod"
                android:layout_margin="@dimen/Margin5dp"
                android:padding="@dimen/Margin5dp"

                android:background="@drawable/white_gredient_bg_rect"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="4.5"
                    android:layout_margin="@dimen/Margin5dp"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/tvCase"
                        android:layout_width="25sp"

                        android:background="@drawable/online_boder"
                        android:layout_height="25sp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:text="Case"
                        android:fontFamily="@font/poppins_bold"

                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="5"
                android:id="@+id/tvPod"
                android:layout_margin="@dimen/Margin5dp"
                android:padding="@dimen/Margin5dp"

                android:background="@drawable/white_gredient_bg_rect"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="4.5"
                    android:layout_margin="@dimen/Margin5dp"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/online"
                        android:layout_width="25sp"

                        android:background="@drawable/cash_boder"
                        android:layout_height="25sp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:text="Online"
                        android:fontFamily="@font/poppins_bold"

                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:text="Please Select Instraction"
                android:textSize="@dimen/Margin15dp"
                android:fontFamily="@font/montserrat_b"
                android:textColor="@color/black"
                android:padding="@dimen/Margin5dp"
                android:layout_height="wrap_content">


            </com.google.android.material.textview.MaterialTextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listItem"
                android:layout_marginTop="@dimen/Margin10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                tools:listitem="@layout/item_instraction"
                android:orientation="vertical"
                app:reverseLayout="true"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:divider="@null"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"

        android:layout_gravity="center|bottom"
        android:gravity="center|bottom"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/proceedToPay"
            android:elevation="5dp"
            android:layout_margin="@dimen/Margin5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed to pay"
            android:padding="@dimen/Margin15dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:fontFamily="@font/montserrat_b"
            android:textAllCaps="false"
            android:background="@drawable/green_gredient_rect_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/Margin15dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.coordinatorlayout.widget.CoordinatorLayout>