<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ecommerce.home">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="70dp"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_gredient_bg"
                app:titleTextColor="@color/white"
                android:padding="@dimen/Margin5dp"


                app:elevation="0dp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/white_gredient_bg"
                    app:contentInsetStart="0dp"
                    app:titleTextColor="@color/black"

                    app:contentInsetStartWithNavigation="0dp"
                    app:elevation="0dp"
                    >



                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:inputType="text"
                        android:layout_marginEnd="@dimen/Margin10dp"
                        android:layout_marginStart="@dimen/Margin5dp"


                        android:textSize="12sp"
                        android:background="@drawable/form_edit_text_background"
                        android:hint="Search E.g Shop,Category,Service,Product"

                        android:fontFamily="@font/montserrat"
                        android:drawablePadding="@dimen/Margin5dp"
                        android:drawableEnd="@drawable/setting"
                        android:drawableTint="@color/grayColor"
                        android:textColorHint="@color/grayColor"
                        android:drawableStart="@drawable/ic_search_black_24dp"

                        android:padding="@dimen/Margin15dp"

                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="4.5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="30sp"

                        android:background="@drawable/heart"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_gravity="center"

                        android:layout_height="30sp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.appcompat.widget.AppCompatImageView
android:id="@+id/img"
                app:shapeAppearanceOverlay="@style/RoundedImageRectRound"
android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="170dp"/>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/Margin10dp"

                android:background="@color/white"

                />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                app:tabBackground="@drawable/indicator_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"

                />



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:text=""
                 android:fontFamily="@font/montserrat_b"
                android:padding="@dimen/Margin5dp"
                android:layout_marginStart="@dimen/Margin20dp"

                android:textSize="@dimen/text_size_edit"
                android:layout_height="wrap_content"/>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/Margin20dp"
android:text=""
               android:fontFamily="@font/montserrat"
                android:padding="@dimen/Margin5dp"
                android:textSize="@dimen/Margin10dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvLeftProduct"
                android:layout_width="match_parent"
                android:text=""
                android:fontFamily="@font/montserrat_b"
                android:padding="@dimen/Margin5dp"
                android:layout_marginStart="@dimen/Margin20dp"

                android:textSize="@dimen/text_size_edit"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="2"


                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:text="Organic Milk"
                        android:id="@+id/tvPrice"

                        android:layout_marginStart="@dimen/Margin20dp"

                        android:layout_gravity="start"
                        android:gravity="start"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#3c8b00"
                        android:lineSpacingExtra="9.5sp"
                        tools:text="0"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/addLayout"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                     android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/addCartProduct"
                        android:elevation="2dp"
                        android:layout_margin="@dimen/Margin5dp"
                        android:layout_width="wrap_content"
                        android:visibility="gone"

                        android:layout_height="wrap_content"
                        android:text="Add To Card"
                        android:padding="@dimen/Margin10dp"
                        android:layout_gravity="center|end"
                        android:gravity="center|end"
                        android:fontFamily="@font/montserrat_b"

                        android:textAllCaps="false"
                        android:background="@drawable/red_gredient_cirl_bg"
                        android:textColor="@color/white"

                        android:textSize="@dimen/Margin10dp"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center|end"
                        android:id="@+id/addBtn"
android:visibility="gone"
                        android:layout_marginEnd="@dimen/Margin20dp"

                        android:weightSum="3"
                         android:orientation="horizontal"

                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/button_subtract"
                            android:layout_width="30dp"

                            android:layout_gravity="center"
                            android:layout_height="30dp"

                            android:background="@drawable/minus"
                            android:backgroundTint="#F37D7D"
                            />
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans_b"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="15sp"

                            />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/button_add"
                            android:layout_width="30dp"
                            android:layout_gravity="center"


                            android:backgroundTint="#CD9EE865"
                            android:layout_height="30dp"
                            android:background="@drawable/add"
                            />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
               android:id="@+id/layoutCard"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/Margin10dp"
                android:layout_marginEnd="@dimen/Margin10dp"
                android:layout_marginStart="@dimen/Margin10dp"
                 android:padding="@dimen/Margin5dp"
                android:orientation="horizontal"

                android:weightSum="2"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:text="₹ 1,100"

                        android:layout_gravity="start|center"
                        android:gravity="start|center"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="normal"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:lineSpacingExtra="9.5sp"
                        tools:text="₹ 1,100"
                        android:layout_marginEnd="@dimen/Margin10dp"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="2sp"
                        android:background="@color/white"
                        android:layout_gravity="center"

                        android:layout_height="20sp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:text="₹ 1,100"

                        android:layout_gravity="start"
                        android:gravity="start"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/Margin10dp"
                        android:lineSpacingExtra="9.5sp"
                        tools:text="₹ 1,100"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center|end"
                    android:gravity="center|end"

                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/addToCard"
                        android:elevation="5dp"
                        android:layout_margin="@dimen/Margin5dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add To Card"
                        android:padding="@dimen/Margin10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"

                        android:background="@drawable/white_gredient_bg_rect"
                        android:textColor="@color/colorPrimaryDark"

                        android:textSize="@dimen/text_size_edit"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
android:layout_marginTop="@dimen/Margin10dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:background="@color/grayColor"
                android:layout_height="2sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/attributeList"
android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                tools:listitem="@layout/item_category"
                android:orientation="horizontal"
                app:reverseLayout="true"

                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

                android:divider="@null"
                />
            <View
                 android:layout_width="match_parent"
                android:background="@color/grayColor"
                android:visibility="gone"
                android:layout_height="2sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/attributeValue"
android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                tools:listitem="@layout/item_sub_category"
                android:orientation="horizontal"
                app:reverseLayout="true"

                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

                android:divider="@null"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listProduct"
                android:layout_marginTop="@dimen/Margin10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"

                tools:listitem="@layout/item_product"
                android:orientation="vertical"
                app:reverseLayout="true"

                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

                android:divider="@null"
                />



        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"

        android:layout_gravity="end|bottom"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:background="@drawable/green_rect"
            android:padding="@dimen/Margin10dp"
            android:visibility="gone"
            android:id="@+id/layoutProceed"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center|start"
                android:gravity="center|start"

                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="40sp"
                    android:layout_height="40sp"

                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/chk_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"

                        android:src="@drawable/ic_shopping_cart" />

                    <com.google.android.material.textview.MaterialTextView

                        android:id="@+id/tvItemCount"
                        android:layout_width="20sp"
                        android:layout_height="20sp"

                        android:layout_gravity="center"
                        android:background="@drawable/red_circle"
                        android:gravity="center"
                        android:text="0"

                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <View
                    android:layout_width="2sp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/Margin10dp"

                    android:layout_height="20sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:id="@+id/tv_totalPrice"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/Margin10dp"
                    android:lineSpacingExtra="9.5sp"
                    tools:text="₹ 1,100"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center|end"
                android:gravity="center|end"

                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/btnProceed"
                    android:elevation="5dp"
                    android:layout_margin="@dimen/Margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proceed to checkout"
                    android:padding="@dimen/Margin10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"

                    android:textAllCaps="false"
                    android:background="@drawable/white_gredient_bg_rect"
                    android:textColor="@color/green"

                    android:textSize="@dimen/text_size_edit"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.coordinatorlayout.widget.CoordinatorLayout>