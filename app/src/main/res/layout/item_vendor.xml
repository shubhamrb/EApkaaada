<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_margin="@dimen/Margin5dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="15dp"
    android:elevation="1sp"
    android:id="@+id/shopView">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:weightSum="5"

        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="3.5"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/frameId"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="0sp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription=""
                    android:scaleType="fitXY"
                    android:src="@drawable/f"
                    app:shapeAppearanceOverlay="@style/twoSideRoundedImageRect"
                    android:adjustViewBounds="true"/>

            </FrameLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1.5"
            android:padding="@dimen/Margin5dp"
            android:layout_gravity="center"
            android:gravity="center"
android:orientation="vertical"
            android:layout_height="wrap_content">



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0sp"
                android:gravity="top|top"


                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0sp"
                    android:gravity="top"

                    android:weightSum="5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:id="@+id/vendor_name"
                            android:text="@string/vendor_name"

                            android:layout_gravity="top|start"
                            android:gravity="top|start"
                            android:padding="2dp"
                            android:layout_marginTop="0dp"
                            app:fontFamily="@font/montserrat"
                            android:textSize="@dimen/text_size_edit"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="wrap_content"
                            />
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:text="@string/vendor_name"
                            android:id="@+id/shopDes"
                            android:padding="2dp"
                            android:layout_gravity="top|start"
                            android:gravity="top|start"
                            android:alpha="0.7"
                            android:lines="2"
                            android:layout_marginTop="0dp"
                            app:fontFamily="@font/montserrat"
                            android:textSize="@dimen/ten"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="wrap_content"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                  <androidx.appcompat.widget.LinearLayoutCompat
                      android:layout_width="match_parent"
                      android:layout_weight="4"
                      android:layout_gravity="center|top"
                      android:gravity="center|top"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
                      <com.airbnb.lottie.LottieAnimationView
                          android:id="@+id/hearAnimation"
                          android:layout_width="40sp"
                          android:layout_height="40sp"
                          android:visibility="gone"
                          app:lottie_rawRes="@raw/heartlike"
                          app:lottie_autoPlay="true"
                          app:lottie_loop="true"/>
                      <com.like.LikeButton
                          app:icon_type="heart"
                          app:icon_size="15dp"
                          android:id="@+id/star_button"
                          android:visibility="gone"
                          android:layout_width="25sp"
                          android:layout_height="25sp"/>
                      <androidx.appcompat.widget.AppCompatImageView
                          android:id="@+id/likeDislike"
                          android:layout_width="20sp"
                          android:padding="@dimen/five"

                          android:layout_height="20sp"

                          android:background="@drawable/heart"
                          android:backgroundTint="@color/gray_heart"


                          android:layout_gravity="top|center"

                          />

                  </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>





<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center|start"
    android:gravity="center|start"
    android:layout_height="wrap_content">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:id="@+id/status"
        android:text="Available"
         android:fontFamily="@font/poppins_bold"
        android:padding="2dp"
        android:layout_gravity="center|start"
        android:gravity="center|start"
        android:alpha="0.9"
        android:layout_marginTop="0dp"
        app:fontFamily="@font/montserrat"
        android:textSize="@dimen/ten"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/shopStatus"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/ic_baseline_fiber_manual_record_24"
        android:layout_height="wrap_content"/>
</androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0sp"
                android:gravity="top"


                android:weightSum="5"

                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/Margin5dp"

                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:id="@+id/id_rs"
                         android:layout_marginStart="@dimen/Margin5dp"
android:visibility="gone"
                        android:text="@string/vendor_name"
                        android:padding="2dp"
                        android:layout_gravity="top|start"
                        android:gravity="top|start"
                        android:alpha="0.7"
                        android:layout_marginTop="0dp"
                        app:fontFamily="@font/montserrat"
                        android:textSize="@dimen/ten"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_height="wrap_content"
                        />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/Margin5dp"
                        android:layout_weight="1.4"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="16sp"
                            android:id="@+id/tvStartOne"
                            android:layout_height="16sp"
                            android:background="@drawable/ic_star_black_24dp"
                            android:backgroundTint="@color/yellow" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="16sp"
                            android:id="@+id/tvStartTwo"
                            android:layout_height="16sp"
                            android:background="@drawable/ic_star_black_24dp"
                            android:backgroundTint="@color/yellow" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="16sp"
                            android:id="@+id/tvStartThree"
                            android:layout_height="16sp"
                            android:background="@drawable/ic_star_black_24dp"
                            android:backgroundTint="@color/yellow" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="16sp"
                            android:id="@+id/tvStartFour"
                            android:layout_height="16sp"
                            android:background="@drawable/ic_star_black_24dp"
                            android:backgroundTint="@color/yellow" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="16sp"
                            android:id="@+id/tvStartFive"
                            android:layout_height="16sp"
                            android:background="@drawable/ic_star_black_24dp"
                            android:backgroundTint="@color/yellow" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:id="@+id/tvtext"
                        android:text="Free Shiping"
                        android:padding="2dp"

                        android:layout_marginStart="@dimen/Margin5dp"
                        android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:alpha="0.7"
                        android:layout_marginTop="0dp"
                        app:fontFamily="@font/montserrat"
                        android:textSize="8sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_height="wrap_content"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:id="@+id/tvKm"
                        android:text="Free Shiping"
                        android:padding="2dp"

                        android:layout_marginStart="@dimen/Margin5dp"
                        android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:alpha="0.7"
                        android:layout_marginTop="0dp"
                        app:fontFamily="@font/montserrat"
                        android:textSize="8sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_height="wrap_content"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="@dimen/five"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/submit_btn"
                        android:elevation="0.1dp"
                        android:layout_margin="@dimen/Margin5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Explore"
                        android:padding="5sp"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/poppins"

                        android:textAllCaps="false"
                        android:background="@drawable/btn_bg"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                     />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>




</com.google.android.material.card.MaterialCardView>