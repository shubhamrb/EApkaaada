<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center|top"
    android:gravity="center|top"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="5"
                android:padding="@dimen/five"
                android:orientation="horizontal"
                android:background="@drawable/white_gredient_bg"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35sp"
                    android:padding="@dimen/five"
                    android:layout_weight="0"
                    android:layout_margin="@dimen/five"
                    android:backgroundTint="@color/black"
                    android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:layout_height="35dp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/forget_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Account"
                    app:fontFamily="@font/montserrat_b"
                    android:gravity="center|start"
                    android:layout_weight="5"
                    android:layout_gravity="center|start"
                    android:padding="@dimen/five"
                    android:textSize="@dimen/tittle_text_size"

                    android:textColor="@color/black"
                    android:alpha="0.7"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="@dimen/Margin5dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:inputType="text"

                        android:textSize="@dimen/text_size_edit"


                        android:background="@drawable/form_edit_text_background"
                        android:hint="@string/password"
                        android:padding="16dp"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="3.5"
                    android:layout_gravity="end|center"
                    android:gravity="end|center"
                    android:layout_height="wrap_content">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/submit_btn"
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/Margin5dp"
                        android:layout_height="wrap_content"
                        android:text="Apply"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_bg"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_edit"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:text="Cart Summary"
                android:textColor="@color/green"
                android:padding="@dimen/Margin5dp"
                android:textSize="@dimen/Margin15dp"
                android:fontFamily="@font/poppins"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="300sp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"


                    android:orientation="vertical"
                    app:reverseLayout="true"

                    tools:listitem="@layout/item_my_cart_product"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                    android:divider="@null"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
<View
    android:layout_width="match_parent"
    android:background="@color/black"
    android:alpha=".5"
    android:layout_margin="@dimen/Margin5dp"
    android:layout_height="1sp"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:text="Sub Total"
                        app:fontFamily="@font/poppins"
                        android:textColor="@color/green"
                        android:padding="@dimen/Margin5dp"
                        android:textSize="@dimen/Margin15dp"
                         android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/subTotal"
                        android:layout_width="match_parent"
                        android:layout_gravity="end"
                        android:gravity="end"
                        tools:text="â‚¹ 1,100"
                        android:textColor="@color/green"
                        android:padding="@dimen/Margin5dp"
                        android:textSize="@dimen/Margin15dp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:text="Coupon Applied"
                        app:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/Margin5dp"
android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:textSize="@dimen/text_size_edit"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="end|center"
                    android:gravity="end|center"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/cpApp"
                        android:layout_width="match_parent"
                        android:layout_gravity="end|center"
                        android:gravity="end|center"
                        tools:text="â‚¹ 1,100"
                        android:textColor="@color/colorPrimary"
 android:layout_marginEnd="@dimen/Margin5dp"
                        android:textSize="@dimen/text_size_edit"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:text="Count Discount"
                        app:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/Margin5dp"
                        android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:textSize="@dimen/text_size_edit"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="end|center"
                    android:gravity="end|center"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/cpApp"
                        android:layout_width="match_parent"
                        android:layout_gravity="end|center"
                        android:gravity="end|center"
                        tools:text="â‚¹ 1,100"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginEnd="@dimen/Margin5dp"
                        android:textSize="@dimen/text_size_edit"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:text="Delivery Charge"
                        app:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/Margin5dp"
                        android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:textSize="@dimen/text_size_edit"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="end|center"
                    android:gravity="end|center"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvdc"
                        android:layout_width="match_parent"
                        android:layout_gravity="end|center"
                        android:gravity="end|center"
                        tools:text="â‚¹ 1,100"
                        android:textColor="@color/black"
                        android:layout_marginEnd="@dimen/Margin5dp"
                        android:textSize="@dimen/text_size_edit"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>



            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:text="Multi Store Charge"
                        app:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/Margin5dp"
                        android:layout_gravity="center|start"
                        android:gravity="center|start"
                        android:textSize="@dimen/text_size_edit"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="end|center"
                    android:gravity="end|center"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvdc"
                        android:layout_width="match_parent"
                        android:layout_gravity="end|center"
                        android:gravity="end|center"
                        tools:text="â‚¹ 1,100"
                        android:textColor="@color/black"
                        android:layout_marginEnd="@dimen/Margin5dp"
                        android:textSize="@dimen/text_size_edit"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>



            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:alpha=".5"
                android:layout_margin="@dimen/Margin5dp"
                android:layout_height="1sp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_gravity="bottom|end"
        android:gravity="bottom|end"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:background="@drawable/green_rect"
            android:padding="@dimen/Margin10dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center|start"
                android:gravity="center|start"

                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:text="Organic Milk"

                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="normal"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="9.5sp"
                    tools:text="â‚¹ 1,100"
                    android:layout_marginEnd="@dimen/Margin10dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="2sp"
                    android:background="@color/white"
                    android:layout_gravity="center"

                    android:layout_height="20sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:text="Organic Milk"

                    android:layout_gravity="start"
                    android:gravity="start"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/Margin10dp"
                    android:lineSpacingExtra="9.5sp"
                    tools:text="â‚¹ 1,100"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center|end"
                android:gravity="center|end"

                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/saveData"
                    android:elevation="5dp"
                    android:layout_margin="@dimen/Margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proceed to checkout"
                    android:padding="@dimen/Margin10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"

                    android:textAllCaps="false"
                    android:background="@drawable/white_gredient_bg_rect"
                    android:textColor="@color/green"

                    android:textSize="@dimen/text_size_edit"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
