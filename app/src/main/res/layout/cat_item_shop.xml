<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:id="@+id/openCard"
    android:elevation="5sp"

    android:gravity="center"

    android:layout_margin="@dimen/Margin5dp"

    android:orientation="vertical">
<FrameLayout

    android:layout_width="wrap_content"
    android:layout_height="100sp"

    android:layout_gravity="top"

    android:layout_marginTop="0sp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription=""
        android:scaleType="fitXY"
        android:src="@drawable/zf"
        app:shapeAppearanceOverlay="@style/RoundedImageRecttwo"
        android:adjustViewBounds="true"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grocery"
        app:fontFamily="@font/montserrat"
        android:gravity="bottom|center"
android:layout_gravity="bottom|center"
        android:textStyle="bold"

android:layout_marginBottom="@dimen/Margin10dp"
        android:fontFamily="@font/montserrat_b"
        android:textSize="@dimen/Margin15dp"

        android:textColor="@color/white"
        />

</FrameLayout></androidx.appcompat.widget.LinearLayoutCompat>