<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"

    android:padding="@dimen/Margin10dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tvClose"
        android:layout_width="35sp"
        android:layout_gravity="end"

        android:background="@drawable/ic_close_black_24dp"
        android:layout_height="35sp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/Margin5dp"
        android:id="@+id/nightChargeLayout"
        android:padding="@dimen/Margin5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCoupon"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"

            android:text="Night Charge"


            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/text_size_edit"
            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:id="@+id/nightCharge"
            android:text=""
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_edit"

            android:layout_weight="4"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/Margin5dp"
        android:id="@+id/multiVenCharge"
        android:padding="@dimen/Margin5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCoupon"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"

            android:text="Multi Vendor Charge"


            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/text_size_edit"
            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
android:id="@+id/tvMultiVenCharge"
            android:text=" "
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_edit"

            android:layout_weight="4"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/Margin5dp"
        android:id="@+id/deliverCharge"
        android:padding="@dimen/Margin5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCoupon"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"

            android:text="Deliver Charge"


            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/text_size_edit"
            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
android:id="@+id/tvDeliveryCharge"
            android:text=" "
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_edit"

            android:layout_weight="4"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/Margin5dp"

        android:padding="@dimen/Margin5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCoupon"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"

            android:text="Total Price"


            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/text_size_edit"
            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:id="@+id/tvTotalChargePrice"
            android:text=" "
            android:layout_gravity="right"
            android:gravity="right"
            app:fontFamily="@font/montserrat"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_edit"

            android:layout_weight="4"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/Margin5dp"

        android:padding="@dimen/Margin5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvCoupon"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"

            android:text="Total Price"


            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/text_size_edit"
            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/Margin5dp"

        android:padding="@dimen/Margin5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCoupon"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"

            android:text="After Adding Total Charge"


            android:fontFamily="@font/montserrat_b"
            android:textSize="@dimen/text_size_edit"
            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:id="@+id/tvAddTotalChargePrice"
            android:text=" "
            android:layout_gravity="right"
            android:gravity="right"
            app:fontFamily="@font/montserrat_b"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_edit"

            android:layout_weight="4"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/btnProceedBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/Margin10dp"
        android:background="@drawable/red_gredient_rect_bg"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:padding="@dimen/Margin10dp"

        android:text="Proceed to checkout"
        android:textAllCaps="false"
        android:textColor="@color/white"

        android:textSize="@dimen/text_size_edit" />

</LinearLayout>