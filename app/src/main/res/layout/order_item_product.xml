<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cardView"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5sp"
android:layout_margin="@dimen/Margin5dp"
    app:contentPadding="10sp"
    app:rippleColor="@color/colorPrimary"
    app:cardElevation="1sp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:weightSum="5">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="@dimen/Margin30dp"
                    android:layout_height="@dimen/Margin30dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="@dimen/Margin30dp"
                        android:layout_height="@dimen/Margin30dp"
                        android:layout_gravity="center"

                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/productImg"
                            android:layout_width="@dimen/Margin30dp"
                            android:layout_height="@dimen/Margin30dp"
                            android:src="@drawable/f" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"


                    android:text="Jan 1 2020"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ten"

                    app:fontFamily="@font/montserrat_b"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpUsage" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvVariantValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center|start"
                    android:gravity="center|start"


                    android:text=""
                    android:textColor="@color/green"
                    android:textSize="@dimen/ten"

                    app:fontFamily="@font/montserrat_b"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpUsage" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/catName"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginEnd="@dimen/Margin5dp"
                        android:alpha=".9"


                        android:background="@drawable/gray_fram_bg"

                        android:padding="@dimen/Margin5dp"
                        android:text="Electronic"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        app:fontFamily="@font/montserrat"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/subCat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginEnd="@dimen/Margin5dp"

                        android:alpha=".9"


                        android:background="@drawable/gray_fram_bg"

                        android:padding="@dimen/Margin5dp"
                        android:text="Electronic"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        app:fontFamily="@font/montserrat"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/subtosubCat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"

                        android:alpha=".9"


                        android:background="@drawable/gray_fram_bg"

                        android:padding="@dimen/Margin5dp"
                        android:text="Electronic"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        app:fontFamily="@font/montserrat"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/addStore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        android:background="@drawable/red_square_gradient"

                        android:drawableStart="@drawable/ic_baseline_add_circle_24"
                        android:gravity="center"
                        android:padding="@dimen/Margin5dp"
                        android:text="Add"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_edit"
                        android:visibility="gone"
                        app:fontFamily="@font/montserrat_b" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/pdSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"

                        android:visibility="gone" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.7"
                android:gravity="center|end"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/checkBox"
                    android:layout_width="@dimen/margin25dp"
                    android:layout_height="@dimen/margin25dp"
                    android:background="@drawable/uncheck"
                    android:visibility="gone" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_marginTop="@dimen/Margin5dp"
                    android:gravity="center|end"

                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/actualPrice"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:alpha=".9"
                        android:fontFamily="@font/montserrat_b"

                        android:padding="@dimen/Margin5dp"


                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/Margin10dp"
                        android:visibility="gone"
                        app:fontFamily="@font/montserrat"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvColor"
                        android:layout_width="10sp"

                        android:layout_height="10sp"

                        android:layout_gravity="center|start"
                        android:alpha=".9"

                        android:background="@drawable/red_circle"


                        android:padding="@dimen/Margin5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/Margin10dp"

                        app:fontFamily="@font/montserrat" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvStatus"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"


                        android:alpha=".9"

                        android:gravity="center"


                        android:padding="@dimen/Margin5dp"
                        android:text="d"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        app:fontFamily="@font/montserrat"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTotPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|start"
                    android:drawablePadding="@dimen/Margin5dp"


                    android:gravity="end"
                    android:text="+ 2000"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_edit"

                    app:fontFamily="@font/montserrat_b"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpUsage" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/Margin5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/track_dot_1"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:backgroundTint="@color/green"
                app:srcCompat="@drawable/track_dot_2" />

            <View
                android:id="@+id/track_line_1"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/track_line_2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/track_dot_2"
                android:layout_width="19dp"
                android:layout_height="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/track_dot_1" />

            <View
                android:id="@+id/track_line_2"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/track_line_1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/track_dot_3"
                android:layout_width="19dp"
                android:layout_height="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/track_dot_1" />

            <View
                android:id="@+id/track_line_3"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/track_line_1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/track_dot_4"
                android:layout_width="19dp"
                android:layout_height="19dp"
                app:layout_constraintStart_toStartOf="parent"

                app:srcCompat="@drawable/track_dot_1" />

            <View
                android:id="@+id/track_line_4"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/track_line_1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/track_dot_5"
                android:layout_width="19dp"
                android:layout_height="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/track_dot_1" />

            <View
                android:id="@+id/track_line_5"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:layout_marginBottom="3dp"
                android:background="@drawable/track_line_1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/track_dot_6"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"

                app:srcCompat="@drawable/track_dot_1" />

            <View
                android:id="@+id/track_line_6"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:layout_marginBottom="3dp"
                android:background="@drawable/track_line_1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/track_dot_7"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"

                app:srcCompat="@drawable/track_dot_1" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>
