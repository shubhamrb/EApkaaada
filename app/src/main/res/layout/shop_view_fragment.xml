<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"

    tools:context=".ecommerce.home">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <androidx.appcompat.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:background="@color/white"



           android:layout_height="match_parent">
           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_gravity="center"
               android:gravity="center"
               android:visibility="gone"
               android:id="@+id/layoutNoProduct"
               android:layout_height="match_parent">
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                   android:text="No Product Found"
                   android:layout_gravity="center"
                   android:gravity="center"
android:textSize="@dimen/Margin20dp"
                   android:fontFamily="@font/montserrat_b"
                   android:layout_height="wrap_content"/>
           </androidx.appcompat.widget.LinearLayoutCompat>


           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:id="@+id/layView"

               android:background="@color/white"
               android:orientation="vertical"

               android:layout_height="match_parent">
               <androidx.appcompat.widget.LinearLayoutCompat
                   android:layout_width="match_parent"
                   android:weightSum="5"
                   android:id="@+id/headerLayout"
                   android:layout_height="wrap_content">
                   <androidx.appcompat.widget.LinearLayoutCompat
                       android:layout_width="match_parent"
                       android:layout_weight="0.5"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_height="wrap_content">
                       <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/edit_name"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:gravity="center|left"
                           android:inputType="text"
                           android:layout_marginEnd="@dimen/Margin10dp"
                           android:layout_marginStart="@dimen/Margin5dp"


                           android:textSize="12sp"
                           android:background="@drawable/form_edit_text_background"
                           android:hint="Search E.g Shop,Category,Service,Product"

                           android:fontFamily="@font/montserrat"
                           android:drawablePadding="@dimen/Margin5dp"
                           android:drawableEnd="@drawable/setting"
                           android:drawableTint="@color/grayColor"
                           android:textColorHint="@color/grayColor"
                           android:drawableStart="@drawable/ic_search_black_24dp"

                           android:padding="@dimen/Margin15dp"

                           />

                   </androidx.appcompat.widget.LinearLayoutCompat>

                   <androidx.appcompat.widget.LinearLayoutCompat
                       android:layout_width="match_parent"
                       android:layout_weight="4.5"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_height="wrap_content">
                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="30sp"

                           android:background="@drawable/heart"
                           android:backgroundTint="@color/colorPrimary"
                           android:layout_gravity="center"

                           android:layout_height="30sp"/>

                   </androidx.appcompat.widget.LinearLayoutCompat>

               </androidx.appcompat.widget.LinearLayoutCompat>

               <androidx.viewpager.widget.ViewPager
                   android:id="@+id/viewPager"
                   android:layout_width="match_parent"
                   android:layout_height="160dp"
                   android:layout_marginTop="@dimen/Margin10dp"

                   android:background="@color/white"

                   />

               <com.google.android.material.tabs.TabLayout
                   android:id="@+id/indicator"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_centerInParent="true"

                   app:tabBackground="@drawable/indicator_selector"
                   app:tabGravity="center"
                   app:tabIndicatorHeight="0dp"

                   />


               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                   android:text=""

                   android:fontFamily="@font/montserrat_b"
                   android:padding="@dimen/Margin5dp"
                   android:textSize="@dimen/text_size_edit"
                   android:layout_height="wrap_content"/>
               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                   android:text=""
                   android:fontFamily="@font/montserrat"
                   android:padding="@dimen/Margin5dp"
                   android:textSize="@dimen/Margin10dp"
                   android:textColor="@color/black"
                   android:layout_height="wrap_content"/>

               <androidx.appcompat.widget.LinearLayoutCompat
                   android:layout_width="match_parent"
                   android:layout_marginTop="@dimen/Margin10dp"
                   android:layout_marginEnd="@dimen/Margin10dp"
                   android:layout_marginStart="@dimen/Margin10dp"
                   android:background="@drawable/red_gredient_rect_bg"
                   android:padding="@dimen/Margin5dp"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_height="wrap_content">
                   <androidx.appcompat.widget.LinearLayoutCompat
                       android:layout_width="match_parent"
                       android:layout_weight="1"
                       android:layout_gravity="center|start"
                       android:gravity="center|start"
                       android:layout_marginStart="@dimen/Margin10dp"

                       android:orientation="horizontal"
                       android:layout_height="wrap_content">
                       <com.google.android.material.textview.MaterialTextView
                           android:layout_width="wrap_content"

                           android:layout_gravity="start|center"
                           android:gravity="start|center"
                           android:fontFamily="@font/montserrat"
                           android:textStyle="normal"
                           android:textSize="@dimen/text_size_edit"
                           android:textColor="@color/white"
                           android:lineSpacingExtra="9.5sp"
                           tools:text="Rating : 5/5"
                           android:layout_marginEnd="@dimen/Margin10dp"
                           android:layout_height="wrap_content"/>

                       <androidx.appcompat.widget.LinearLayoutCompat
                           android:layout_width="match_parent"
                           android:layout_weight="1.4"
                           android:layout_marginStart="@dimen/Margin5dp"
                           android:orientation="horizontal"
                           android:layout_gravity="center"
                           android:gravity="center|start"
                           android:layout_height="wrap_content">
                           <androidx.appcompat.widget.AppCompatImageView
                               android:layout_width="16sp"
                               android:background="@drawable/ic_star_black_24dp"
                               android:backgroundTint="@color/yellow"
                               android:layout_height="16sp"/>
                           <androidx.appcompat.widget.AppCompatImageView
                               android:layout_width="16sp"
                               android:background="@drawable/ic_star_black_24dp"
                               android:backgroundTint="@color/yellow"
                               android:layout_height="16sp"/>
                           <androidx.appcompat.widget.AppCompatImageView
                               android:layout_width="16sp"
                               android:background="@drawable/ic_star_black_24dp"
                               android:backgroundTint="@color/yellow"
                               android:layout_height="16sp"/>
                           <androidx.appcompat.widget.AppCompatImageView
                               android:layout_width="16sp"
                               android:background="@drawable/ic_star_black_24dp"
                               android:backgroundTint="@color/yellow"
                               android:layout_height="16sp"/>
                           <androidx.appcompat.widget.AppCompatImageView
                               android:layout_width="16sp"
                               android:background="@drawable/ic_star_black_24dp"
                               android:backgroundTint="@color/yellow"
                               android:layout_height="16sp"/>
                           <androidx.appcompat.widget.AppCompatImageView
                               android:layout_width="16sp"
                               android:background="@drawable/ic_star_black_24dp"
                               android:backgroundTint="@color/yellow"
                               android:layout_height="16sp"/>
                       </androidx.appcompat.widget.LinearLayoutCompat>

                   </androidx.appcompat.widget.LinearLayoutCompat>

                   <androidx.appcompat.widget.LinearLayoutCompat
                       android:layout_width="match_parent"
                       android:layout_weight="1"
                       android:layout_gravity="center|end"
                       android:gravity="center|end"

                       android:layout_height="wrap_content">
                       <com.google.android.material.textview.MaterialTextView

                           android:elevation="5dp"
                           android:layout_margin="@dimen/Margin5dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="89 Review"
                           android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                           android:drawableTint="@color/white"
                           android:padding="@dimen/Margin5dp"
                           android:layout_gravity="center|end"
                           android:gravity="center|end"
                           android:fontFamily="@font/montserrat"

                           android:textAllCaps="false"
                           android:textColor="@color/white"

                           android:textSize="12sp"/>

                   </androidx.appcompat.widget.LinearLayoutCompat>
               </androidx.appcompat.widget.LinearLayoutCompat>
               <View
                   android:layout_marginTop="@dimen/Margin10dp"

                   android:layout_width="match_parent"
                   android:background="@color/grayColor"
                   android:layout_height="2sp"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/listCat"

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:scrollbars="none"
                   tools:listitem="@layout/item_category"
                   android:orientation="horizontal"
                   app:reverseLayout="true"

                   app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

                   android:divider="@null"
                   />
               <View
                   android:layout_width="match_parent"
                   android:background="@color/grayColor"
                   android:layout_height="2sp"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/listSubCat"

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:scrollbars="none"
                   tools:listitem="@layout/item_sub_category"
                   android:orientation="horizontal"
                   app:reverseLayout="true"

                   app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

                   android:divider="@null"
                   />
               <View
                   android:layout_width="match_parent"
                   android:background="@color/grayColor"
                   android:layout_height="2sp"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/listProduct"
                   android:layout_marginTop="@dimen/Margin10dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:scrollbars="none"
                   tools:listitem="@layout/item_product"
                   android:orientation="vertical"
                   app:reverseLayout="true"

                   app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

                   android:divider="@null"
                   />

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="100sp"/>

           </androidx.appcompat.widget.LinearLayoutCompat>

       </androidx.appcompat.widget.LinearLayoutCompat>
   </androidx.core.widget.NestedScrollView>


<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
android:visibility="gone"
    android:id="@+id/btnProcess"
    android:layout_gravity="end|bottom"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:background="@drawable/green_rect"
        android:padding="@dimen/Margin10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_gravity="center|start"
    android:gravity="center|start"

    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:text="0"
        android:id="@+id/itemCount"

        android:layout_gravity="start|center"
        android:gravity="start|center"
        android:fontFamily="@font/montserrat"
        android:textStyle="normal"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:lineSpacingExtra="9.5sp"
        tools:text="₹ 1,100"
        android:layout_marginEnd="@dimen/Margin10dp"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="2sp"
        android:background="@color/white"
        android:layout_gravity="center"

        android:layout_height="20sp"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:text="0"
android:id="@+id/tvPrice"
        android:layout_gravity="start"
        android:gravity="start"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/white"
 android:layout_marginStart="@dimen/Margin10dp"
        android:lineSpacingExtra="9.5sp"
        tools:text="₹ 1,100"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center|end"
            android:gravity="center|end"

            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btnProceed"
                android:elevation="5dp"
                android:layout_margin="@dimen/Margin5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed to checkout"
                android:padding="@dimen/Margin10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/montserrat"

                android:textAllCaps="false"
                android:background="@drawable/white_gredient_bg_rect"
                android:textColor="@color/green"

                android:textSize="@dimen/text_size_edit"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.coordinatorlayout.widget.CoordinatorLayout>