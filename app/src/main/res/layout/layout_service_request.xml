<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/Margin10dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tvClose"
        android:layout_width="35sp"
        android:layout_gravity="end"

        android:background="@drawable/ic_close_black_24dp"
        android:layout_height="35sp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/Margin5dp"
        android:background="@drawable/gray_fram_bg"
        android:padding="@dimen/Margin10dp"

        app:layout_constraintTop_toBottomOf="@+id/tvCoupon"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
android:id="@+id/selectService"
            android:text="Select Service Category"


            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/Margin15dp"
            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtComment"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="12dp"
        tools:ignore="SpUsage"
        android:layout_gravity="top|center"
        android:gravity="center|top"

        android:hint="Enter Your Remark">

        <com.google.android.material.textfield.TextInputEditText

            android:background="@drawable/form_edit_text_background"

            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/btnProceedBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/Margin10dp"
        android:background="@drawable/red_gredient_rect_bg"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:padding="@dimen/Margin10dp"

        android:text="Send Service Request"
        android:textAllCaps="false"
        android:textColor="@color/white"

        android:textSize="@dimen/text_size_edit" />

</LinearLayout>