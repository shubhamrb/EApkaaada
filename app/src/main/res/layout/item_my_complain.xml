<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    android:layout_margin="@dimen/five"
    android:backgroundTint="@color/white"
    android:id="@+id/showProduct">

    <androidx.appcompat.widget.LinearLayoutCompat

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked"
                android:layout_width="match_parent"
                app:shapeAppearanceOverlay="@style/RoundedImageRectRoundFive"
                android:layout_weight="4"
                android:id="@+id/img"
                android:backgroundTint="@color/colorPrimaryDark"
                android:src="@drawable/logo"
                android:layout_height="80dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2"
                android:padding="@dimen/five"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center|end"

                        android:layout_height="wrap_content">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvOrderNo"
                            android:layout_width="wrap_content"

                            android:text="Electronic"
                            android:padding="@dimen/Margin5dp"
                            android:layout_marginEnd="@dimen/Margin5dp"
                            android:layout_gravity="center|start"


                            android:background="@drawable/gray_fram_bg"

                            app:fontFamily="@font/montserrat"
                            android:textSize="8dp"
                            android:textColor="@color/black"
                            android:alpha=".9"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="wrap_content"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:id="@+id/tvName"
                        android:text="Organic Milk"
                        android:maxLines="1"
                        android:textColor="#3c8b00"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="12dp"
                        android:layout_gravity="start"
                        android:gravity="start"

                        android:layout_height="wrap_content"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:id="@+id/tvariantName"
                        android:text="Organic Milk"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:textColor="#3c8b00"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="12dp"
                        android:layout_gravity="start"
                        android:gravity="start"

                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:id="@+id/tvVenName"
                        android:text="Organic Milk"
                        android:layout_gravity="start"
                        android:gravity="start"

                        android:textSize="11dp"
                        android:textColor="@color/g_black"
                        android:maxLines="2"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:id="@+id/tvComplain"
                        android:text="Organic Milk"
                        android:layout_gravity="start"
                        android:gravity="start"

                        android:textSize="11dp"
                        android:textColor="@color/g_black"
                        android:maxLines="2"
                        android:layout_height="wrap_content"/>



                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:id="@+id/tvLayout"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:weightSum="3"
                    android:orientation="vertical"

                    android:layout_height="wrap_content">


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center|end"
                        android:id="@+id/addBtn"
android:visibility="gone"
                        android:weightSum="3"
                        android:layout_marginEnd="@dimen/Margin10dp"
                        android:orientation="horizontal"

                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/button_subtract"
                            android:layout_width="30dp"

                            android:layout_gravity="center"
                            android:layout_height="30dp"

                            android:background="@drawable/minus"
                            android:backgroundTint="#F37D7D"
                            />
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans_b"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="15sp"

                            />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/button_add"
                            android:layout_width="30dp"
                            android:layout_gravity="center"


                            android:backgroundTint="#CD9EE865"
                            android:layout_height="30dp"
                            android:background="@drawable/add"
                            />


                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/addCart"
                        android:elevation="2dp"
                        android:layout_margin="@dimen/Margin5dp"
                        android:layout_width="wrap_content"
                        android:visibility="gone"

                        android:layout_height="wrap_content"
                        android:text="Add To Card"
                        android:padding="@dimen/Margin10dp"
                        android:layout_gravity="center|end"
                        android:gravity="center|end"
                        android:fontFamily="@font/montserrat_b"

                        android:textAllCaps="false"
                        android:background="@drawable/red_gredient_cirl_bg"
                        android:textColor="@color/white"

                        android:textSize="@dimen/Margin10dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>



</com.google.android.material.card.MaterialCardView>