<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/white_top_round_gredient_circle"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="10sp"
    android:layout_margin="@dimen/Margin5dp"
    android:layout_height="match_parent"

   >


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="wrap_content">

   <androidx.appcompat.widget.LinearLayoutCompat
       android:layout_width="match_parent"
       android:id="@+id/layoutSad"
       android:orientation="vertical"
       android:visibility="gone"
       android:layout_margin="@dimen/Margin10dp"
       android:layout_height="wrap_content">
       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/sadImg"
           android:layout_width="50sp"
           android:layout_gravity="center"
           android:gravity="center"

           android:background="@drawable/sad"
           android:layout_height="50sp"/>
       <com.google.android.material.textview.MaterialTextView
           android:layout_width="match_parent"
           android:text="Opps No Variant Found"
           android:textSize="24dp"
           android:layout_gravity="center"
           android:gravity="center"
           android:padding="@dimen/Margin5dp"
           app:fontFamily="@font/montserrat_b"
           android:layout_height="wrap_content"/>

   </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:id="@+id/layoutVariant"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/RoundedImageRectRound" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/Margin10dp"

            android:background="@color/white"

            />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:tabBackground="@drawable/indicator_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"

            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40sp"
            android:layout_gravity="end"
            android:id="@+id/closeTv"
            android:layout_margin="@dimen/Margin10dp"
            android:background="@drawable/ic_close_black_24dp"
            android:layout_height="40sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Margin20dp"
            android:fontFamily="@font/montserrat_b"
            android:padding="@dimen/Margin5dp"

            android:text=""
            android:textSize="@dimen/text_size_edit" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Margin20dp"
            android:fontFamily="@font/montserrat"
            android:padding="@dimen/Margin5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/Margin10dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLeftProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Margin20dp"
            android:fontFamily="@font/montserrat_b"
            android:padding="@dimen/Margin5dp"

            android:text=""
            android:textSize="@dimen/text_size_edit" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start"

                    android:layout_marginStart="@dimen/Margin20dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start"
                    android:lineSpacingExtra="9.5sp"
                    android:text="Organic Milk"
                    android:textColor="#3c8b00"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:text="0" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/addLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/addCartProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_margin="@dimen/Margin5dp"

                    android:background="@drawable/red_gredient_cirl_bg"
                    android:elevation="2dp"
                    android:fontFamily="@font/montserrat_b"
                    android:gravity="center|end"
                    android:padding="@dimen/Margin10dp"
                    android:text="Add To Card"

                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/Margin10dp"

                    android:visibility="gone" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/addBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/Margin20dp"
                    android:layout_weight="1"
                    android:gravity="center|end"

                    android:orientation="horizontal"
                    android:visibility="gone"

                    android:weightSum="3">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/button_subtract"
                        android:layout_width="30dp"

                        android:layout_height="30dp"
                        android:layout_gravity="center"

                        android:background="@drawable/minus"
                        android:backgroundTint="#F37D7D" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/open_sans_b"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="15sp"

                        />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/button_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"


                        android:layout_gravity="center"
                        android:background="@drawable/add"
                        android:backgroundTint="#CD9EE865" />


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginTop="@dimen/Margin10dp"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:orientation="horizontal"

            android:padding="@dimen/Margin5dp"
            android:weightSum="2">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start|center"
                    android:layout_marginEnd="@dimen/Margin10dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start|center"
                    android:lineSpacingExtra="9.5sp"
                    android:text="₹ 1,100"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="normal"
                    tools:text="₹ 1,100" />

                <View
                    android:layout_width="2sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"

                    android:background="@color/white" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/Margin10dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start"
                    android:lineSpacingExtra="9.5sp"
                    android:text="₹ 1,100"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:text="₹ 1,100" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_weight="1"

                android:gravity="center|end">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/addToCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/Margin5dp"
                    android:background="@drawable/white_gredient_bg_rect"
                    android:elevation="5dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:padding="@dimen/Margin10dp"
                    android:text="Add To Card"

                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_edit"

                    android:visibility="gone" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginTop="@dimen/Margin10dp"
            android:background="@color/grayColor"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attributeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

            app:reverseLayout="true"

            tools:listitem="@layout/item_category" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/grayColor"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attributeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:orientation="horizontal"
            android:scrollbars="none"

            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

            app:reverseLayout="true"

            tools:listitem="@layout/item_sub_category" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Margin10dp"
            android:divider="@null"
            android:visibility="gone"
            android:orientation="vertical"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

            app:reverseLayout="true"

            tools:listitem="@layout/item_product" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"

        android:layout_gravity="end|bottom"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:background="@drawable/green_rect"
            android:padding="@dimen/Margin10dp"
            android:visibility="gone"
            android:id="@+id/layoutProceed"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center|start"
                android:gravity="center|start"

                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="40sp"
                    android:layout_height="40sp"

                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/chk_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"

                        android:src="@drawable/ic_shopping_cart" />

                    <com.google.android.material.textview.MaterialTextView

                        android:id="@+id/tvItemCount"
                        android:layout_width="20sp"
                        android:layout_height="20sp"

                        android:layout_gravity="center"
                        android:background="@drawable/red_circle"
                        android:gravity="center"
                        android:text="0"

                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <View
                    android:layout_width="2sp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/Margin10dp"

                    android:layout_height="20sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:id="@+id/tv_totalPrice"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/Margin10dp"
                    android:lineSpacingExtra="9.5sp"
                    tools:text="₹ 1,100"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center|end"
                android:gravity="center|end"

                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/btnProceed"
                    android:elevation="5dp"
                    android:layout_margin="@dimen/Margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proceed to checkout"
                    android:padding="@dimen/Margin10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"

                    android:textAllCaps="false"
                    android:background="@drawable/white_gredient_bg_rect"
                    android:textColor="@color/green"

                    android:textSize="@dimen/text_size_edit"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.coordinatorlayout.widget.CoordinatorLayout>