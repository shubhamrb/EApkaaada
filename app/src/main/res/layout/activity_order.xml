<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_height="match_parent"
    tools:context=".ui.auth.fragments.order.ActivityOrder">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/white_gredient_bg"
        app:titleTextColor="@color/white"
        android:padding="@dimen/Margin5dp"


        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_gredient_bg"
            app:contentInsetStart="0dp"
            app:titleTextColor="@color/black"
            app:contentInsetStartWithNavigation="0dp"
            app:elevation="0dp"
            >



        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listProduct"
        android:layout_width="match_parent"
        android:layout_height="0sp"

        android:divider="@null"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/appBar"


        app:reverseLayout="true"
        app:layout_constraintBottom_toTopOf="@+id/layoutProceed"

        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/item_product" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/emptyCartLayout"
        app:layout_constraintTop_toBottomOf="@+id/appBar"

        app:layout_constraintBottom_toTopOf="@+id/layoutProceed"

        tools:layout_editor_absoluteX="0dp"
android:gravity="center"

        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:src="@drawable/cart"
            android:layout_marginTop="@dimen/Margin50dp"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatImageView>
<TextView
    android:layout_gravity="center"
    android:gravity="center"
    android:textSize="@dimen/Margin20dp"
    android:textColor="@color/colorPrimary"
    android:layout_width="match_parent"
    android:text="Empty Order Keep Shopping"
    android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_rect"
        android:orientation="horizontal"
        android:id="@+id/layoutProceed"

        android:weightSum="2"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listProduct"
        tools:layout_editor_absoluteX="-16dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:background="@drawable/green_rect"
            android:padding="@dimen/Margin10dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center|start"
                android:gravity="center|start"

                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="40sp"
                    android:layout_height="40sp"

                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/chk_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"

                        android:src="@drawable/ic_shopping_cart" />

                    <com.google.android.material.textview.MaterialTextView

                        android:id="@+id/itemCount"
                        android:layout_width="20sp"
                        android:layout_height="20sp"

                        android:layout_gravity="center"
                        android:background="@drawable/red_circle"
                        android:gravity="center"
                        android:text="0"

                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <View
                    android:layout_width="2sp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/Margin10dp"

                    android:layout_height="20sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:id="@+id/tvPrice"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/Margin10dp"
                    android:lineSpacingExtra="9.5sp"
                    tools:text="â‚¹ 1,100"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center|end"
                android:gravity="center|end"

                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/btnProceed"
                    android:elevation="5dp"
                    android:layout_margin="@dimen/Margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proceed to checkout"
                    android:padding="@dimen/Margin10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"

                    android:textAllCaps="false"
                    android:background="@drawable/white_gredient_bg_rect"
                    android:textColor="@color/green"

                    android:textSize="@dimen/text_size_edit"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_cpy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo"
            android:layout_below="@+id/chk_icon"
            android:scaleType="fitXY"
            android:visibility="gone"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>