<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">40dp</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:src">@android:drawable/ic_menu_rotate</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="tabtextcolor" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">

        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/green_circle</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">42dp</item><!-- menu item height- vary as u need -->
    </style>


    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="RoundedImageRect">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>
    <style name="RoundedImageRecttwo">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
    <style name="twoSideRoundedImageRect">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">10%</item>
        <item name="cornerSizeBottomRight">0%</item>
        <item name="cornerSizeTopLeft">10%</item>
        <item name="cornerSizeTopRight">0%</item>
    </style>


    <style name="OneSideRoundedImageRect">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">0%</item>
        <item name="cornerSizeBottomRight">0%</item>
        <item name="cornerSizeTopLeft">15%</item>
        <item name="cornerSizeTopRight">15%</item>
    </style>


    <style name="RoundedImageRectRoundFive">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">5%</item>
        <item name="cornerSizeBottomRight">0%</item>
        <item name="cornerSizeTopLeft">5%</item>
        <item name="cornerSizeTopRight">0%</item>
    </style>

    <style name="RoundedImageRectRound">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeBottomRight">0%</item>
        <item name="cornerSizeTopLeft">20%</item>
        <item name="cornerSizeTopRight">0%</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>



    <style name="ProductImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="RoundedProfileDP">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>